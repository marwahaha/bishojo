<div class="row">
    <div class="col-md-12">
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d6306.723438082578!2d-122.39844028870407!3d37.78156193197657!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8085807e0fbb1b7b%3A0xed3852393ecfd4be!2s795+Folsom+St+%23600%2C+San+Francisco%2C+CA+94107%2C+USA!5e0!3m2!1sde!2sde!4v1421225586862" width="100%" height="200" frameborder="0" style="border:0"></iframe>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <%= form_tag(send_contact_path, method: :post, class: "form-horizontal") do %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <h2>Get in touch</h2>
                </div>
            </div>
            
            <div class="form-group">
                <%= label_tag 'name', nil, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= text_field_tag 'name', nil, autofocus: true, class: "form-control", :placeholder => "Your Name" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= label_tag 'email', nil, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= email_field_tag 'email', nil, class: "form-control", :placeholder => "Your Email" %>
                </div>
            </div>
            
            <div class="form-group">
                <%= label_tag 'message', nil, class: "col-sm-2 control-label" %>
                <div class="col-sm-10">
                  <%= text_area_tag 'message', nil, rows: 5, class: "form-control", :placeholder => "Your Message" %>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                  <%= submit_tag "Send", class: "btn btn-default" %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-md-3">
        <h2>Infos</h2>
        
        <address>
            <strong>damncraft</strong><br>
            795 Folsom Ave, Suite 600<br>
            San Francisco, CA 94107<br>
            <abbr title="Phone">P:</abbr> (123) 456-7890
        </address>
        
        <address>
            <strong>Damn Crafte</strong><br>
            <a href="mailto:bishojo@damncraft.com">bishojo@damncraft.com</a>
        </address>
    </div>
</div>